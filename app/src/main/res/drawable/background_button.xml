<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="90.0" android:endColor="@color/end_color_of_background_button" android:startColor="@color/start_color_of_background_button" android:type="linear" />
            <stroke android:width="2dip" android:color="@color/border_of_button" />
            <corners android:radius="30.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/enabled_color_of_background_button" />
            <stroke android:width="2dip" android:color="@color/border_of_button" />
            <corners android:radius="30.0dip" />
        </shape>
    </item>
</selector>