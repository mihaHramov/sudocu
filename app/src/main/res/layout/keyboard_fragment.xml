<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical">

        <Button
            android:id="@+id/history_back"
            style="@style/ButtonOfAnswerHistory"
            android:background="@drawable/background_previous_button" />

        <Button
            android:id="@+id/history_forward"
            style="@style/ButtonOfAnswerHistory"
            android:background="@drawable/background_next_button" />
    </LinearLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/button1"
                layout="@layout/button_of_answer" />

            <include
                android:id="@+id/button2"
                layout="@layout/button_of_answer" />

            <include
                android:id="@+id/button3"
                layout="@layout/button_of_answer" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/button4"
                layout="@layout/button_of_answer" />

            <include
                android:id="@+id/button5"
                layout="@layout/button_of_answer" />

            <include
                android:id="@+id/button6"
                layout="@layout/button_of_answer" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/button7"
                layout="@layout/button_of_answer" />

            <include
                android:id="@+id/button8"
                layout="@layout/button_of_answer" />

            <include
                android:id="@+id/button9"
                layout="@layout/button_of_answer" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical">

        <Button
            android:id="@+id/delete_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="@drawable/background_delete_answer_button" />
    </LinearLayout>
</LinearLayout>
